DROP FUNCTION IF EXISTS sumar_numeros $$
CREATE FUNCTION sumar_numeros(a INT, b INT)
RETURNS INT
BEGIN
  DECLARE resultado INT;
  SET resultado = a + b;
  RETURN resultado;
END $$

